{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "commonjs": true 
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/no-unresolved": [
            2, 
            { "caseSensitive": false }
        ],
        "import/resolver": "webpack"
    }
}
